<%- model_class = Product -%>
<div class="page-header">
  <h1>Produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
   
      <th><%= model_class.human_attribute_name(:product_modelo) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:color_id) %></th>
      <th><%= model_class.human_attribute_name(:size_id) %></th>
       <th><%= model_class.human_attribute_name(:quantity) %></th>
      
      
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
       
        <td><%= product.product_modelo %></td>
        <td><%= product.description %></td>
        <td><%= product.color.name %></td>
        <td><%= product.size.name %></td>
        <td><%= product.quantity %></td>
        
        <td>
          <%= link_to t('.editar', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.deletar', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
            
            
            
