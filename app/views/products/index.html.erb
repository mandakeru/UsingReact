<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |pd| %>
      <tr>
        <td><%= pd.name %></td>
        <td><%= pd.description %></td>
        <td><%= pd.color.name %></td>
        <td><%= pd.size.name %></td>
        <td><%= link_to 'Show', pd %></td>
        <td><%= link_to 'Edit', edit_product_path(pd) %></td>
        <td><%= link_to 'Destroy', pd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>