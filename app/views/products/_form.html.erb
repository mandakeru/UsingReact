      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @products.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <p>Nome:</p>
    <%= f.input :name, label: false %>
  </div>
  <div class="field">
    <p>Descrição:</p>
    <%= f.input :description, label: false %>
  </div>
  <div class="field">
    <p>Color:</p>
    <%= f.collection_select(:color_id, Color.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
   <p>Size:</p>
    <%= f.collection_select(:size_id, Size.all, :id, :name, prompt: true) %>
  </div>
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
